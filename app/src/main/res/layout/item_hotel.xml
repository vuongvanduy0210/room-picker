<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/bg_input_radius"
    android:padding="@dimen/dp_20">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/img_item_hotel_width"
        android:layout_height="@dimen/img_item_hotel_height"
        app:cardCornerRadius="@dimen/dp_15">

        <ImageView
            android:layout_width="@dimen/img_item_hotel_width"
            android:layout_height="@dimen/img_item_hotel_height"
            android:background="@drawable/bg_input_radius"
            android:src="@drawable/op1"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resort 1"
        android:textSize="@dimen/sp_18"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_10"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/dp_17"
            android:layout_height="@dimen/dp_17"
            android:src="@drawable/ic_location_outlined"/>

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ha Noi, Viet Nam"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/gray_subtext_color"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/dp_3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center">

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20000K VNĐ"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/blue_dark"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/Đêm"
            android:textSize="@dimen/sp_13"
            android:textColor="@color/gray_subtext_color"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>